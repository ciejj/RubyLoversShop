<div class="row">
  <div class="col-md-4">
    <h4 class="mb-3">Order details</h4>
    <li class="list-group-item d-flex justify-content-between lh-condensed">
      <div>
        <h6 class="my-0">Order id: </h6>
      </div>
      <span class="text-muted"><%= @order.id %></span>
    </li>  
    <li class="list-group-item d-flex justify-content-between lh-condensed">
      <div>
        <h6 class="my-0">User:</h6>
      </div>
      <span class="text-muted"><%= @order.user.email %></span>
    </li>  
    <li class="list-group-item d-flex justify-content-between lh-condensed">
      <div>
        <h6 class="my-0">State:</h6>
      </div>
      <span class="text-muted"><%= @order.state %></span>
    </li>
  </div>
  <div class="col-md-4 mb-4">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
      <span class="text-muted">Ordered items</span>
      <span class="badge badge-secondary badge-pill"><%=@order_items.count%></span>
    </h4>
    <% @order_items.each do |order_item|%>
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0"><%= order_item.product.name %></h6>
        </div>
        <span class="text-muted"><%= order_item.total_price %></span>
      </li>
    <% end %>
    <li class="list-group-item d-flex justify-content-between">
      <span>Total (USD)</span>
      <strong><%= @order.total %></strong>
    </li>
   </div>
</div>