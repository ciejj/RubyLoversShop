<h4 class="d-flex justify-content-between align-items-center mb-3">
  <span class="text-muted">Ordered items</span>
  <span class="badge badge-secondary badge-pill"><%=order_items.count%></span>
</h4>
<% order_items.each do |order_item|%>
  <li class="list-group-item d-flex justify-content-between lh-condensed">
    <div>
      <h6 class="order-item-name"><%= order_item.product.name %></h6>
    </div>
    <span class="order-item-price text-muted"><%= order_item.total_price %></span>
  </li>
<% end %>
<li class="list-group-item d-flex justify-content-between">
  <span>Total (USD)</span>
  <strong class="order-total"><%= order.total %></strong>
</li>