<div class="d-flex justify-content-between  align-items-center mb-3">
  <h2>Products</h2>
  <%= link_to "Add Product", new_admin_product_path, class: "btn btn-dark", id: "add-product-button" %>
</div>

<table class="table">
  <thead class="theadk">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Brand</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <th scope="row" class="product-name"><%= product.name %></th>
      <td><%= product.price %></td>
      <td><%= product&.category&.name %></td>
      <td><%= product&.brand&.name %></td>
      <td>
        <%= link_to "edit", edit_admin_product_path(product), 
          class: "btn btn-outline-secondary btn-sm", id: "edit-product-#{product.id}-button" %>
        <%= link_to "delete",  admin_product_path(product), method: :delete, 
          data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm", id: "edit-product-#{product.id}-button" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>