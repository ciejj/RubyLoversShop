<%= form_with model: [:ordrers, @address], url: orders_billing_address_path,  local: true do |f| %>

    <%= render "shared/error_messages", errors: @errors %>
    <div class="form-group row">
      <label for="address_street_name1" class="col-3 col-form-label">Street Name 1</label>
      <%= f.text_field :street_name1, class: "form-control col-9" %>
    </div>

    <div class="form-group row">
      <label for="address_street_name2" class="col-3 col-form-label">Street Name 2</label>
      <%= f.text_field :street_name2, class: "form-control col-9" %>
    </div>
  
    <div class="form-group row">
      <label for="address_city" class="col-3 col-form-label">City</label>
      <%= f.text_field :city, class: "form-control col-9" %>
    </div>
  
    <div class="form-group row">
      <label for="address_country" class="col-3 col-form-label">Country</label>
      <%= f.text_field :country, class: "form-control col-9" %>
    </div>

    <div class="form-group row">
      <label for="address_state" class="col-3 col-form-label">State</label>
      <%= f.text_field :state, class: "form-control col-9" %>
    </div>

    <div class="form-group row">
      <label for="address_zip" class="col-3 col-form-label">Zip code</label>
      <%= f.text_field :zip, class: "form-control col-9" %>
    </div>

    <div class="form-group row">
      <label for="address_phone" class="col-3 col-form-label">Phone number</label>
      <%= f.text_field :phone, class: "form-control col-9" %>
    </div>

    <div class="form-group row">
      <%= f.submit "Save Billing Address", class: "btn btn-outline-secondary btn-inverse btn-block" %>
    </div>
  <% end %>
</div>
