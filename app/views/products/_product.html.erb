<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100">
    <%=link_to image_tag(product.main_image_path, class: 'card-img-top'), product_path(product) %>
    <div class="card-body">
      <h4 class="card-title">
        <%=link_to product.name, product_path(product) %>
      </h4>
      <%= product.price %> USD</h5>
    </div>
    <% if user_signed_in? %>
      <div class="card-footer">
        <%= button_to 'Add to Cart', add_to_cart_path(product_id: product.id), 
            class: "btn btn-small btn-block btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>