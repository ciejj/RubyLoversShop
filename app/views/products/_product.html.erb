<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100">
    <%=link_to image_tag(product.main_image_path, class: 'card-img-top'), product_path(product) %>
    <div class="card-body">
      <h4 class="card-title">
        <%=link_to product.name, product_path(product) %>
      </h4>
      <%= product.price %> USD</h5>
    </div>
    <div class="add-to-cart">
      <%= product.add_to_cart_button %>
    </div>
  </div>
</div>
